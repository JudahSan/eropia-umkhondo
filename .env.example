# M-Pesa API credentials
# Copy this file to .env and fill in your M-Pesa API credentials

# Your M-Pesa API consumer key from Safaricom Daraja portal
MPESA_CONSUMER_KEY=your_consumer_key_here

# Your M-Pesa API consumer secret from Safaricom Daraja portal
MPESA_CONSUMER_SECRET=your_consumer_secret_here

# M-Pesa API URL (defaults to sandbox if not specified)
# Use "https://sandbox.safaricom.co.ke" for testing
# Use "https://api.safaricom.co.ke" for production
MPESA_API_URL=https://sandbox.safaricom.co.ke

# M-Pesa Business ShortCode (Paybill or Till Number)
MPESA_BUSINESS_SHORT_CODE=your_shortcode_here

# M-Pesa API PassKey (from Daraja portal)
MPESA_PASSKEY=your_passkey_here

# Callback URLs for receiving API responses (should be publicly accessible)
MPESA_CALLBACK_URL=https://your-domain.com/mpesa/callbacks

# Set to "true" for demo mode (simulated transactions)
# Set to "false" to use actual M-Pesa API
MPESA_DEMO_MODE=true